{
    "name": "screenify",
    "displayName": "Screenify",
    "description": "Capture your code snippets and turn them into canvas for drawing, then share them others by uploading the image to screenify CDN server.",
    "version": "0.0.4",
    "engines": {
        "vscode": "^1.42.0"
    },
    "keywords": [
        "screenshot",
        "snippet",
        "snap",
        "clipboard",
        "share",
        "polacode",
        "carbon",
        "codesnap",
        "upload"
    ],
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/screenify/screenify-vscode.git"
    },
    "publisher": "AdamMomen",
    "galleryBanner": {
        "color": "#fbfbfb",
        "theme": "light"
    },
    "icon": "resources/icon-big.png",
    "activationEvents": [
        "onCommand:screenify.activate",
        "onWebviewPanel:screenify",
        "onView:help"
    ],
    "main": "./src/extension",
    "contributes": {
        "viewsContainers": {
            "activitybar": [{
                "id": "screenify",
                "title": "Screenify",
                "icon": "resources/icon-big.png"
            }]
        },
        "views": {
            "screenify": [{
                    "id": "gettingStarted",
                    "name": "Getting Started"
                },
                {
                    "id": "help",
                    "name": "More"
                }
            ]
        },
        "menu": {
            "view/item/context": [{
                "command": "help.openUri",
                "when": "view == help && viewItem == openUrl",
                "group": "inline"
            }],
            "view/title": [{
                "command": "screenify.supportScreenify",
                "when": "view == help",
                "group": "navigation"
            }]
        },
        "viewsWelcome": [{
            "view": "gettingStarted",
            "contents": "Click on üì∏ to start using screenify:\n[üì∏](command:screenify.activate)"
        }],
        "commands": [{
                "command": "screenify.activate",
                "title": "Screenify üì∏"
            },
            {
                "command": "help.openUri",
                "title": "Open Uri ‚ù§"
            }
        ],
        "keybindings": [{
            "command": "screenify.activate",
            "key": "ctrl+shift+s",
            "mac": "cmd+shift+s"
        }],
        "configuration": {
            "title": "Screenify",
            "properties": {
                "screenify.shadow": {
                    "type": "string",
                    "description": "Shadow of the snippet node. Use any value for CSS `box-shadow`",
                    "default": "rgba(0, 0, 0, 0.55) 0px 20px 68px"
                },
                "screenify.transparentBackground": {
                    "type": "boolean",
                    "description": "Transparent background for containers",
                    "default": false
                },
                "screenify.backgroundColor": {
                    "type": "string",
                    "description": "Background color of snippet container. Use any value for CSS `background-color`",
                    "format": "color-hex",
                    "default": "#f2f2f2"
                },
                "screenify.target": {
                    "type": "string",
                    "description": "Shoot with or without container",
                    "default": "container",
                    "enum": [
                        "container",
                        "snippet"
                    ],
                    "enumDescriptions": [
                        "Shoot with the container.",
                        "Shoot with the snippet alone. If you want transparent padding, use `container` with `\"screenify.transparentBackground\": true`"
                    ]
                },
                "screenify.serverUrl": {
                    "type": "string",
                    "description": "`",
                    "default": "screenify-njy7ok457q-ez.a.run.app"
                }
            }
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.42.0",
        "electron": "file:node_modules/electron",
        "eslint": "*",
        "glob": "^7.1.6",
        "mocha": "^7.0.1",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "bluebird": "^3.7.2",
        "fs": "0.0.1-security",
        "img-clipboard": "^1.0.4",
        "node-fetch": "^3.1.1",
        "node-powershell": "^4.0.0",
        "os": "^0.1.1",
        "path": "^0.12.7",
        "randomstring": "^1.1.5"
    }
}